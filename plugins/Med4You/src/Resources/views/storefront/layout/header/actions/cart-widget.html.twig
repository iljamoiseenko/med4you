{% sw_extends '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}


{% block layout_header_actions_cart_widget %}
    <div class="header-icons-block">
        <div class="header-cart-icon">
            <img class="header-cart-icon" src="{{ asset('bundles/med4you/shopping_card.svg', 'asset') }}" alt="card">
           
        </div>
         <span class="header-cart-text">Shopping Cart</span>
            {% if page.cart.lineItems|length > 0 %}
                <span class="badge {{ bgClass }}-primary header-cart-badge">{{ page.cart.lineItems|length }}</span>
            {% endif %}
            <span class="header-cart-total">
                {{ page.cart.price.positionPrice|currency }}{{ "general.star"|trans|sw_sanitize }}
            </span>
    </div>
    
{% endblock %}
